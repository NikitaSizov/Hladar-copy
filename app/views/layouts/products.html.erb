<% content_for :content do %>
<div class="container-fluid">
  <div class="col-sm-3 col-md-2 sidebar">
    <h2>Продукция</h2>
    <% @categories.each do |category|  %>
    <h4><%= category.name %></h4>
    <ul class="nav nav-sidebar">
      <% category.product.each do |product| %>
        <li><%= link_to product.name, (admin?) ? admin_product_path(product) : product_path(product) %></li>
      <% end %>
    </ul>
    <% end %>
    <% if admin? then %>
      <%= link_to 'Новый продукт', new_admin_product_path, class: "btn btn-primary center-block" %>
    <% end %>
  </div>
  <div class="col-sm-9 col-md-10 col-sm-offset-3 col-md-offset-2" id="product">
    <%#= render template:'products/show'%>
    <div class="container-fluid">
      <%= yield %>
    </div>
  </div>
</div>
<td><%#= link_to 'Show', admin_product_path(product) %></td>
<% if admin? then %>
  <td><%#= link_to 'Edit', edit_admin_product_path(product) %></td>
<% end %>
<% end %>

<%= render template: "layouts/application" %>
